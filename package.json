{
  "name": "@smis/sso-client",
  "version": "0.1.0",
  "description": "Client-side helper for integrating SMIS SSO sessions, roles, and permissions",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./nuxt": {
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.js",
      "types": "./dist/nuxt.d.ts"
    },
    "./next": {
      "import": "./dist/next.js",
      "require": "./dist/next.js",
      "types": "./dist/next.d.ts"
    },
    "./next-auth": {
      "import": "./dist/next-auth.js",
      "require": "./dist/next-auth.js",
      "types": "./dist/next-auth.d.ts"
    }
  },
  "keywords": ["sso", "authentication", "smis", "client"],
  "author": "Your Team Name",
  "repository": {
    "type": "git",
    "url": "https://github.com/iphearum/sso-client.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "dev": "bun run examples/basic.ts",
    "test": "npm run build && node test/probe.test.js && node test/user.test.js",
    "bundle:dist": "node scripts/pack-dist.mjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "peerDependencies": {
    "next-auth": "^4.0.0 || ^5.0.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/react": "^18.3.27",
    "next-auth": "^4.24.13",
    "react": "^18.3.1",
    "typescript": "^5.9.3"
  }
}
